{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],

      "@api/*": ["api/*"],
      "@compilers/*": ["compilers/*"],
      "@config/*": ["config/*"],
      "@helpers/*": ["helpers/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "mode": "files",
    "out": "docs"
  }
}
