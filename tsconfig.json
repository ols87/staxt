{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@interfaces": ["interfaces"],
      "@api": ["api"],
      "@compilers": ["compilers"],
      "@config": ["config"],
      "@files": ["files"],
      "@helpers": ["helpers"],
      "@services": ["services"],
      "@utils": ["utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/interfaces"],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "mode": "modules",
    "out": "docs",
    "exclude": ["**/src/**/index.ts", "**/*.spec.ts"],
    "excludeNotExported": true
  }
}
